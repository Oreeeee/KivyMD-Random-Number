ScreenManager:
    GenerationScreen:

<GenerationScreen>
    name: 'main_screen'
    BoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            adaptive_height: True
            orientation: 'vertical'
            MDToolbar:
                title: 'Random number generator'

        FloatLayout:
            MDLabel:
                text: ''
                id: number_label
                halign: 'center'
                style: 'H5'
                
            MDRectangleFlatButton:
                text: 'Generate number'
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                on_press: root.generate_number()